<%- include("../partials/header.ejs") %>

    <div class="container form-group col-6">
        <form action="/books/<%= book._id %>/review/<%= review._id %>/?_method=PUT" method="post">
            <div>
                <label for="reviewBody" class="form-label">Edit review <i>
                        <%= book.title %>
                    </i>: </label>
                <div>
                    <textarea type="textarea" id="reviewBody" name="review[body]" rows="10" class="form-control"
                        required><%=review.body %></textarea>
                </div>
            </div>
            <div class="mt-3">
                <label for="rating" class="form-label">Give a rating: </label>

                <!-- Change starability-basic to different class to see animations. -->
                <fieldset class="starability-basic">
                    <input type="radio" id="rating" class="input-no-rate" name="review[rating]" value="0"
                        <%=review.rating===0 ? "checked" :"" %>
                    aria-label="No rating." />
                    <input type="radio" id="rate1" name="review[rating]" value="1" <%=review.rating===1 ? "checked" :""
                        %> />
                    <label for="rate1">1 star.</label>

                    <input type="radio" id="rate2" name="review[rating]" value="2" <%=review.rating===2 ? "checked" :""
                        %> />
                    <label for="rate2">2 stars.</label>

                    <input type="radio" id="rate3" name="review[rating]" value="3" <%=review.rating===3 ? "checked" :""
                        %> />
                    <label for="rate3">3 stars.</label>

                    <input type="radio" id="rate4" name="review[rating]" value="4" <%=review.rating===4 ? "checked" :""
                        %> />
                    <label for="rate4">4 stars.</label>

                    <input type="radio" id="rate5" name="review[rating]" value="5" <%=review.rating===5 ? "checked" :""
                        %> />
                    <label for="rate5">5 stars.</label>

                    <span class="starability-focus-ring"></span>
                </fieldset>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
    <%- include("../partials/footer.ejs") %>