<%- include("../partials/header.ejs") %>
    <form action="/books/<%= book._id %>/review/<%= review._id %>/?_method=PUT" method="post">
        <div>
            <label for="reviewBody">Edit review<i>
                    <div>
                        <textarea type="textarea" id="reviewBody" name="review[body]"
                            cols="40"><%=review.body %></textarea>

                    </div>
        </div>
        <div>
            <label for="rating">Give a rating: </label>
            <input type="range" id="rating" placeholder="Harper Lee" name="review[rating]" min=0 max=5
                value=<%=review.rating %> >
        </div>
        <button type="submit">Update</button>
    </form>
    <%- include("../partials/footer.ejs") %>